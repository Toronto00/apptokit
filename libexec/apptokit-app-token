#!/usr/bin/env ruby
# Usage: apptokit app-token
# Summary: Generate a JWT for your GitHub App
# Help:
#   Pulls from the .apptokit.yaml file.

require "setup"
require "apptokit/jwt"

jwt = Apptokit::JWT.generate

if $stdout.isatty
  puts "Your JWT: \n#{jwt.token}"
else
  print "Bearer #{jwt.token}"
end
